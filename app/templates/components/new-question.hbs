{{#if addNewQuestion}}
    <div>
      <form>
        <div class="form-group">
          <label for="questionTitle">Question</label>
          {{input value=questionTitle id="questionTitle"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="comment">Comment</label>
          {{input value=comment id="comment"}}
        </div>

      
        <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>


 {{else}}
    <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
